{
	// Verwendet IntelliSense zum Ermitteln möglicher Attribute.
	// Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
	// Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
	{
		"type": "node",
		"request": "launch",
		"name": "Frontend",
		// starte im aktuellen Ordner
		"cwd": "${workspaceFolder}",
        "program": "./node_modules/.bin/ui5",
        "args": ["serve","--config=uimodule/ui5.yaml"],
		"sourceMaps": true,
		// zeige die UI im integrierten VS Code terminal
		"console": "integratedTerminal",
		"skipFiles": [
			"<node_internals>/**"
		]
	}]
}
