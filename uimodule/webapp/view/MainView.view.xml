 <mvc:View controllerName="net.prp.dienstleister.fe.prpFESample.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">
        <headerContent>
          <Button text="Logout" press="onLogout"></Button>
        </headerContent>
        <content>
          <Title text="Hello World"></Title>
          <List
              headerText="{i18n>invoiceListTitle}"
              class="sapUiResponsiveMargin"
              width="auto"
              items="{/Books}" >
              <items>
                <ObjectListItem
                    title="{title}"/>
              </items>
          </List>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>